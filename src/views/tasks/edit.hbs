<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/tasks/edit/{{task._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" value="{{task.title}}" name="title" placeholder="Write your title"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" value="{{task.description}}" name="description"
                            placeholder="Write your description" class="form-control">
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a href="/tasks/list" class="btn">Cancel</a>
                        <button type="submit" class="btn btn-success">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>